<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/lottery_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/image_lottery_01"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/lotteryTypeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/lottery_image"/>

    <TextView
            android:id="@+id/lotteryTypeDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/tertiary_text_light"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/lotteryTypeText"/>

    <LinearLayout android:id="@+id/lotteryNumberLayout" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  app:layout_constraintTop_toBottomOf="@id/lotteryTypeDateText"
                  android:orientation="horizontal">

    </LinearLayout>


</android.support.constraint.ConstraintLayout>